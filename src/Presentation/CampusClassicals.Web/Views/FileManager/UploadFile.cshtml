<script>
    $(document).ready(function () {
        SetUploadButtonState($(".custom-file-input").files);

        $("#upload").click(function (evt) {

            var uploadedFiles = $("#fileInput").get(0);
            var files = uploadedFiles.files;

            var data = new FormData();
            for (var i = 0; i < files.length; i++) {
                data.append(files[i].name, files[i])
            }

            isBusy(true);

            $.ajax({
                type: "POST",
                url: "FileManager/UploadFileAsync",
                contentType: false,
                processData: false,
                data: data,

                success: function (message) {
                    isBusy(false);
                    $("#fileInput").val(null);
                    $(".custom-file-label").text("");

                    SetUploadButtonState($(".custom-file-input").files);
                        
                    alert(message);
                },
                    
                error: function (request, status, error) {
                    isBusy(false);
                    alert("Critical error occurred during file upload!");
                }
            })
        })

        function isBusy(busy) {
            if (busy) {
                $("#isBusy").show();
                $("#btnCaption").hide();
            } else {
                $("#isBusy").hide();
                $("#btnCaption").show();
            }
        }

        $(".custom-file-input").change(function () {
            var fileCount = this.files.length;

            if (fileCount > 1) {
                $(".custom-file-label").text(fileCount + " files");
            } else {
                $(".custom-file-label").text(this.files[0].name);
            }

            SetUploadButtonState(this.files);
        })

        function SetUploadButtonState(files) {
            if (files == undefined) {
                $('#upload').prop('disabled', true);
            } else {
                $('#upload').prop('disabled', false);
            }
        }

          

    })
</script>

